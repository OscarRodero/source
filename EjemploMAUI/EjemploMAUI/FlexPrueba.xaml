<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjemploMAUI.FlexPrueba"
             Title="FlexPrueba">
    <FlexLayout Direction="Column">
        <Label Text="Cabecera" FontSize="18" BackgroundColor="Aqua" HorizontalTextAlignment="Center"/>
        <FlexLayout FlexLayout.Grow="1">
            <BoxView Color="Green" FlexLayout.Basis="50"/>
            <Label Text="Contenido" BackgroundColor="Gray" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FlexLayout.Grow="1"/>
            <BoxView Color="Blue" FlexLayout.Basis="50"/>           
        </FlexLayout>
        <Label Text="Cabecera" FontSize="18" BackgroundColor="Pink" HorizontalTextAlignment="Center"/>        
    </FlexLayout>    
</ContentPage>