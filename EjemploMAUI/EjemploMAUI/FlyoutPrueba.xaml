<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="EjemploMAUI.FlyoutPrueba"
            Title= "Prueba"
            FlyoutLayoutBehavior="Split"
            >

    <FlyoutPage.Flyout>
        <ContentPage
            BackgroundColor="LightBlue" Title="Deslizable">
            <Label
                Text="Parte deslizable"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                />
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <ContentPage BackgroundColor="DarkCyan">
            <Label
                Text="Parte Fija"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                />
        </ContentPage>
    </FlyoutPage.Detail>
</FlyoutPage>